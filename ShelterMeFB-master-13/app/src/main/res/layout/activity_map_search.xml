<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.seibelsabrina.sheltermefb.MapSearchActivity">

    <Spinner
        android:id="@+id/spinnerMapGender"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:entries="@array/gender"
        app:layout_constraintEnd_toEndOf="@+id/buttonMapGender"
        app:layout_constraintStart_toEndOf="@+id/buttonMapGender"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMapGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="12dp"
        android:text="Search by Gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMapGender" />

    <Spinner
        android:id="@+id/spinnerMapAge"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:entries="@array/ageRange"
        app:layout_constraintEnd_toEndOf="@+id/buttonMapGender"
        app:layout_constraintStart_toEndOf="@+id/buttonMapGender"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapGender" />

    <Button
        android:id="@+id/buttonMapAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="Search by age"
        app:layout_constraintStart_toStartOf="@+id/editTextMapName"
        app:layout_constraintTop_toBottomOf="@+id/spinnerMapAge" />

    <EditText
        android:id="@+id/editTextMapName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="Shelter Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMapAge" />

    <Button
        android:id="@+id/buttonMapName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:text="Search by name"
        app:layout_constraintStart_toStartOf="@+id/editTextMapName"
        app:layout_constraintTop_toBottomOf="@+id/editTextMapName" />
</android.support.constraint.ConstraintLayout>
